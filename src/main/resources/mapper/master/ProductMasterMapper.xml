<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bfly.management.mapper.master.ProductMasterMapper">

    <!-- 상품 추가/수정/삭제  -->
    <select id="setProduct" parameterType="HashMap" resultType="HashMap">
        CALL pm.sp_mgt_product(
            #{jsonParameter}::json,
            #{rc}::int2, 
            #{rm}::VARCHAR
        )
    </select>

    <!-- 상품 그룹 추가/수정/삭제  -->
    <select id="setProductGroup" parameterType="HashMap" resultType="HashMap">
        CALL pm.sp_mgt_product_group(
            #{jsonParameter}::json,
            #{rc}::int2, 
            #{rm}::VARCHAR
        )
    </select>

    <!-- 옵션카테고리 그룹 추가/수정/삭제  -->
    <select id="setOptionCategory" parameterType="HashMap" resultType="HashMap">
        CALL pm.sp_mgt_option_category(
            #{jsonParameter}::json,
            #{rc}::int2, 
            #{rm}::VARCHAR
        )
    </select>

    <!-- 상품옵션 추가/수정/삭제  -->
    <select id="setOptionProduct" parameterType="HashMap" resultType="HashMap">
        CALL pm.sp_mgt_option(
            #{jsonParameter}::json,
            #{rc}::int2, 
            #{rm}::VARCHAR
        )
    </select>


</mapper>